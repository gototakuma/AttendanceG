<h1>拠点一覧</h1>
<table class="table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
      <td></td>
      <td></td>
      <td>拠点番号</td>
      <td>拠点名</td>
      <td>勤怠種類</td>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |at| %>
      <tr>
        <td><%= link_to "修正", edit_basis_path(at.id),class: "btn btn-primary" %></td>
        <td><%= link_to "削除", basis_path(at.id) ,method: :delete, data: {confirm: "削除してよろしいですか？"},class: "btn btn-primary" %></td>
        <td><%= at.basenumber %></td>
        <td><%= at.basename %></td>
        <td><%= at.baseattendance %></td>
      </tr>
    <%end%>
  </tbody>
</table>

<table class="table-bordered table-striped table-condensed table-hover">
  <tr>
    <td><%= link_to "拠点追加", new_basis_path, class: "btn btn-primary" %></td>
  </tr>
</table>

